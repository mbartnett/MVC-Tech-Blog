<section class="post">
    <div class="post-header">
        <div class="post-headline">
            <h3><a href="/comment/{{post.id}}" id="comment">{{post.title}}</a></h2>
        </div>
        <div class="post-user-date">
            <h4>Posted by {{post.user.username}} on {{format_date post.createdAt}}</h3>
        </div>
    </div>
    <p>{{post.contents}}</p>
</section>

<section class="posted-comment">
    <div class="section-header">
        <h3>Comments</h3>
    </div>
    {{#each post.comments as |comment|}}
    <div class="section-body">
        <p><a href="/edit-comment/{{comment.id}}">{{comment.text}}</a></p>
        <p>â€“ {{user.username}}, {{format_date comment.createdAt}}</p>
    </div>
    {{/each}}
    {{#unless post.comments}}
    <div class="section-body">
        <p>Be the first to comment!</p>
    </div>
    {{/unless}}
</section>

