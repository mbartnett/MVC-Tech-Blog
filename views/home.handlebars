{{#each posts as |post| }}
<section class="post">
    <div class="post-header">
        <div class="post-headline">
            <h3><a href="/comment/{{post.id}}" id="comment">{{post.title}}</a></h2>
        </div>
        <div class="post-user-date">
            <h4>Posted by {{post.user.username}} on {{format_date post.date_created}}</h3>
        </div>
    </div>
    <p>{{post.contents}}</p>
</section>
{{/each}}
